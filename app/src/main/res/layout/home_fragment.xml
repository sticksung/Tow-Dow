<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/my_tow_dow_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="172dp"
            android:layout_marginTop="16dp"
            android:text="@string/my_tow_dows"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/plus_image"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toEndOf="@+id/my_tow_dow_text"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/forums_list"
            android:layout_width="405dp"
            android:layout_height="506dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plus_image">

        </androidx.recyclerview.widget.RecyclerView>

        <ImageView
            android:id="@+id/search_image"
            android:layout_width="79dp"
            android:layout_height="75dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="75dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forums_list" />

        <ImageView
            android:id="@+id/home_image"
            android:layout_width="79dp"
            android:layout_height="75dp"
            android:layout_marginStart="86dp"
            android:layout_marginTop="75dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toEndOf="@+id/search_image"
            app:layout_constraintTop_toBottomOf="@+id/forums_list" />

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="79dp"
            android:layout_height="75dp"
            android:layout_marginStart="82dp"
            android:layout_marginTop="75dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toEndOf="@+id/home_image"
            app:layout_constraintTop_toBottomOf="@+id/forums_list" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>