<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#E8E8E8"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#651FFF"
        android:rotation="0">

        <TextView
            android:id="@+id/no_forumns_text2"
            android:layout_width="218dp"
            android:layout_height="33dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="92dp"
            android:text="  "
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/my_tow_dow_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="16dp"
            android:text="@string/my_tow_dows"
            android:textColor="@color/purple_500"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_forums_list"
            android:layout_width="405dp"
            android:layout_height="439dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="1dp"
            android:background="#190909"
            android:backgroundTint="#E8E8E8"
            android:clipToPadding="false"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_tow_dow_text">

        </androidx.recyclerview.widget.RecyclerView>

        <ImageView
            android:id="@+id/add_category_image"
            android:layout_width="59dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="28dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/home_home_button"
            android:layout_width="85dp"
            android:layout_height="76dp"
            android:layout_marginStart="34dp"
            android:scaleType="fitEnd"
            android:src="@drawable/home1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_forums_list" />

        <TextView
            android:id="@+id/home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="57dp"
            android:text="@string/home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_home_button" />

        <TextView
            android:id="@+id/search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="89dp"
            android:text="@string/search"
            app:layout_constraintStart_toEndOf="@+id/home_text"
            app:layout_constraintTop_toBottomOf="@+id/home_search_botton" />

        <ImageButton
            android:id="@+id/home_profile_buttom"
            android:layout_width="85dp"
            android:layout_height="76dp"
            android:layout_marginEnd="34dp"
            android:scaleType="fitEnd"
            android:src="@drawable/profile1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_forums_list" />

        <TextView
            android:id="@+id/profiles_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="56dp"
            android:text="@string/profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_profile_buttom" />

        <ImageButton
            android:id="@+id/home_search_botton"
            android:layout_width="85dp"
            android:layout_height="76dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/search1"
            app:layout_constraintStart_toEndOf="@+id/home_home_button"
            app:layout_constraintTop_toBottomOf="@+id/my_forums_list" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="415dp"
            android:layout_height="106dp"
            android:background="#AEAFAF"
            android:elevation="-1dp"
            android:src="@android:drawable/screen_background_light_transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_forums_list" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>